@model List<EmpDetails.Models.Department>
<h2>Department Table</h2>
<br />
<h3 class="pull-left">@Html.ActionLink("Add Department","New","Departments")</h3>
<h3 class="pull-right">@Html.ActionLink("Go to Employee Table", "EmployeeDetailsPage", "Employees")</h3>
<body>
    <table id="Department" class="table table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Department Name</th>
            <th>Active</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach(var department in Model)
        {
    <tr>
        <td>@department.Id</td>
        <td>@department.Deptname</td>
        <td>@department.IsActive</td>
        <td>@Html.ActionLink("Edit", "Edit", "Departments", new { id = department.Id }, null)</td>
        <td>
            @using (Html.BeginForm("Delete", "Departments", new { id = department.Id }))
            {
                <input type="submit" value="Delete"
                       onclick="return confirm(' Are you Sure ?');" />
            }
        </td>
    </tr>

        }
</body>