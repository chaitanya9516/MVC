
@model List<EmpDetails.Models.Employee>
    <h2>Employee Table</h2>
<br />
 <h3 class="pull-left">@Html.ActionLink("Add Employee","New","Employees")</h3>
<h3 class="pull-right">@Html.ActionLink("Go to Department Table","DepartmentDetailspage","Departments")</h3>
                      <body>
                          <table id="Employee" class="table table-bordered table-hover">
                              <tr>
                                  <th>Id</th>
                                  <th>Name</th>
                                  <th>Salary</th>
                                  <th>Department</th>
                                  <th>Active</th>
                                  <th>Email</th>
                                  <th>Edit</th>
                                  <th>Delete</th>
                              </tr>
                              @foreach (var employee in Model)
                              {
                                  <tr>
                                      <td>@employee.Id</td>
                                      <td>@employee.Name</td>
                                      <td>@employee.Salary</td>
                                      <td>@employee.Department.Deptname</td>
                                      <td>@employee.IsActive</td>
                                      <td>@employee.Email</td>
                                      <td>@Html.ActionLink("Edit","Edit","Employees",new { id = employee.Id },null)</td>
                                      <td>
                                          @using (Html.BeginForm("Delete", "Employees", new { id = employee.Id }))
                                          {
                                              <input type="submit" value="Delete"
                                                     onclick="return confirm(' Are you Sure ?');"/>
                                          }
                                       </td>
                                  </tr>
                              }

                          </table>
                      </body>
